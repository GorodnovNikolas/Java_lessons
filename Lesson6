package Lesson6;

public class Action {
    private int x;
    private int y;
    private String z;
    private int res;

    public void operation () {
        if (z.equals ("*")) {
             res = (x * y);
        }
        if (z.equals ("/")) {
             res =(x / y);
        }
        if (z.equals ("+")) {
             res = (x + y);
        }
        if (z.equals ("-")) {
             res = (x - y);
        }
    }
    public void setX (int x) {
        this.x = x;
    }

    public void setY (int y) {
        this.y = y;
    }

    public void setZ (String z) {
        this.z = z;
    }

    public int getRes () {
        return res;
    }
}
////////////
package Lesson6;

import java.util.Scanner;

public class Calkulator {
    public static void main (String args[]) {

        Scanner scan = new Scanner (System.in);
        Action action = new Action ();

        System.out.println("ВВедите 1");
      action.setX (scan.nextInt ());
        System.out.println("Введите 2");
        action.setY (scan.nextInt ());
        System.out.println("Введите знак");
        action.setZ (scan.next ());
        action.operation ();
        System.out.println (action.getRes ());
    }
}
